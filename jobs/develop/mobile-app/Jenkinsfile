pipeline {
    agent {
        kubernetes {
            label 'mobile-build'
            yaml """
spec:
  imagePullSecrets:
    - name: com.emasphere.dev.ecr
  containers:
  - name: nodejs
    image: 840205991060.dkr.ecr.eu-central-1.amazonaws.com/dev/jenkins-nodejs:1.0.0
    imagePullPolicy: Always
    command:
    - cat
    tty: true
"""
        }
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    credentialsId: 'github-user-token',
                    url: 'https://github.com/EMAsphere/mobile.git'
            }
        }
//         stage('Install') {
//             steps {
//                 container('nodejs') {
//                     sh "npm install"
//                 }
//             }
//         }
//         stage('Build') {
//             steps {
//                 container('nodejs') {
//                     sh "npm run build"
//                 }
//             }
//         }
    }

    post {
        always {
            slackSend
        }

        changed {
            emailext subject: '$DEFAULT_SUBJECT',
                     body: '$DEFAULT_CONTENT',
                     replyTo: '$DEFAULT_REPLYTO',
                     to: 'sgerard@emasphere.com'
        }
        failure {
            emailext subject: '$DEFAULT_SUBJECT',
                     body: '$DEFAULT_CONTENT',
                     replyTo: '$DEFAULT_REPLYTO',
                     to: 'sgerard@emasphere.com'
        }
    }
}
